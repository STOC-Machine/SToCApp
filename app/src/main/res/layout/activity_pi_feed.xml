<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#0099cc"
             tools:context=".PiFeed"
             android:id="@+id/feed_container">

    <yjkim.mjpegviewer.MjpegView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoFeedView"/>
    <TextView
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/feed_id" android:textSize="34sp"
            android:textAlignment="center" android:textColor="@android:color/white" android:textStyle="bold"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="@color/progressColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feed_error"/>

</FrameLayout>