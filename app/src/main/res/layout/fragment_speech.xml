<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".SpeechFragment" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->
    <Button
            android:text="@string/speech_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speechButton"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="@+id/speechText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="@string/speech_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speechText"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="50dp"/>

</android.support.constraint.ConstraintLayout>